<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mainbox.fiscaluno.view.cadastro.ConselhosActivity">

    <LinearLayout
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="#808080"
            android:id="@+id/iv_conselhos_icone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_location_city_black_24dp"
            tools:ignore="ContentDescription"/>
        <TextView
            android:id="@+id/tv_conselho_nome"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="20sp"
            android:text="Nome da Instituição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#181818"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_light"/>
        <TextView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="20sp"
            android:text="Dê sugestões de como a instiuição pode melhorar e ser um bom lugar para estudar."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
   <TextView
       android:layout_marginLeft="@dimen/activity_horizontal_margin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sugestões"/>
    <com.mainbox.fiscaluno.view.custom.EditTextBox
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="left"
        android:lines="4"
        android:id="@+id/nomeInstituicao_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:onClick="onNextClick"
            android:textColor="#fff"
            android:backgroundTint="@color/orange_button"
            android:text="@string/continuar"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>

